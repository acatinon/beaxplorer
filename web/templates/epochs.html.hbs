<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/static/css/main.css" rel="stylesheet">
</head>

<body>
  <header>
    {{> common/nav }}
  </header>
  <section class="container mx-auto">
    <h2>Epochs</h2>
    <div class="tabular-data">
      <p>Showing epochs</p>
      <table>
        <tr>
          <th>Epoch</th>
          <th>Time</th>
          <th>Attestations</th>
          <th>Deposits</th>
          <th>Slashings P / A</th>
          <th>Finalized</th>
          <th>Eligible</th>
          <th>Voted</th>
          <th>Rate</th>
        </tr>
        {{#each epochs}}
        <tr>
          <td><a href="/epoch/{{epoch}}">{{epoch}}</a></td>
          <td>{{ago}}</td>
          <td>{{attestations_count}}</td>
          <td>{{deposits_count}}</td>
          <td>{{proposer_slashings_count}} / {{attester_slashings_count}}</td>
          <td>
            {{#if finalized}}
            <span>Yes</span>
            {{else}}
            <span>No</span>
            {{/if}}
          </td>
          <td>{{eligible_ether}} ETH</td>
          <td>{{voted_ether}} ETH</td>
          <td>{{global_participation_percentage}}%</td>
        </tr>
        {{/each}}
      </table>
    </div>
  </section>
  <script src="/static/js/main.js"></script>
</body>

</html>